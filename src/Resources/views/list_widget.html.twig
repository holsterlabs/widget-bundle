{% extends '@Widget/_layouts/widget.html.twig' %}

{%- block widget -%}
    {%- set content = content ?? '' -%}
    <table class="widget-table">
        <tbody>
            {%- for line in list -%}
            <tr>
                <td>
                    {%- if line.href is defined -%}
                        <a href="{{ line.href }}">{{ title_html ? line.title|raw : line.title }}</a>
                    {%- else -%}
                        <span>{{ title_html ? line.title|raw : line.title }}</span>
                    {%- endif -%}
                    {%- if line.description is defined -%}
                        <span>{{ description_html ? line.description|raw : line.description }}</span>
                    {%- endif -%}
                </td>
                <td>
                    {{ definition_html ? line.definition|raw : line.definition }}
                </td>
            </tr>
            {# {%- else -%}
            <tr>
                <td>none</td>
            </tr> #}
            {%- endfor -%}
        </tbody>
    </table>
{%- endblock widget -%}
